<!-- 收件人信息 -->
<view class='page_box' wx:if="{{page_index===3}}">
  <view class="pages">
    <view class='page_title'>
      <view>收货地址</view>
      <view>为防止您的行李丢失,请检查您的个人信息</view>
    </view>
    <!-- 姓名 -->
    <view class="list">
      <view class="list_l">姓名</view>
      <view class="list_rs">
        <input type='text' placeholder='请输入收件人' value="{{name}}" bindinput='name_fun'></input>
        <view class="phone_btn" bindtap='get_info'>
          <view>
            <image src='../../image/phone.png'></image>
          </view>
          <view>快速填写</view>
        </view>
      </view>
    </view>
    <!-- 手机号码 -->
    <view class="list">
      <view class="list_l">手机</view>
      <view class="list_rs">
        <input type='number' placeholder='请输入收件人手机号码' maxlength='11' value="{{phone}}" bindinput='phone_fun'></input>
      </view>
    </view>
    <!-- 地址 -->
    <view class="list" wx:if="{{citty_data_list.length}}">
      <view class="list_l">地址</view>
      <view class="list_rs">
        <view class="filght_num">
          <view class="city_type" bindtap='city_types'>
            <view>手动</view>
            <view>填写</view>
          </view>
          <picker bindchange="city_data" value="{{city_data_index}}" range="{{citty_data_list}}">
            <view class="picker">
              {{citty_data_list[city_data_index]}}
            </view>
          </picker>
        </view>
      </view>
    </view>
    <block wx:else>
      <view class="list">
        <view class="list_l">地址</view>
        <view class="list_rs">

          <view class="citys">
            <input data-type="1" bindinput="getsuggest" bindblur="close_addr" value="{{backfill}}" placeholder='请输入地址'></input>
            <!--关键词输入提示列表渲染-->

            <view wx:for="{{suggestion}}" wx:key="index" wx:if="{{suggestion.length}}" class='city_list'>
              <view class="citty-item" bindtap="backfill" id="{{index}}">
                <view>{{item.title}}</view>
                <view>{{item.addr}}</view>
              </view>
              <button class="close_addrs" data-type="2" bindtap='close_addr'>关闭</button>
            </view>

          </view>

        </view>
      </view>
    </block>
    <!-- 其他信息 -->
    <view class="test-l" bindtap='go_help' data-type="1">委托服务协议条款</view>
    <view class="test">
      <checkbox-group bindchange="page2_fun">
        <label class="checkbox">
          <checkbox value="委托服务协议条款" checked="{{page2}}" /> 我已阅读并同意委托服务协议条款的内容
        </label>
      </checkbox-group>
    </view>
    <view class='btn_page'>
      <text class='pre' bindtap='user_pre' data-type="2">上一步</text>
      <button class="nexts" bindtap='user_page'>立即寄件</button>
    </view>
  </view>
</view>

<!-- 航班号搜索框 -->
<view class="{{flight_number_type}}">
  <view class="search">
    <input type="search" confirm-type="search" placeholder='请输入航班号关键字...' class='search-input' maxlength='6' bindinput='set_flight_number' value="{{flight_number}}"></input>
    <button class='search-btn' bindtap='seach_flight_number' wx:if="{{flight_number}}">
      <i-icon type="search" size='25' />
    </button>
    <block wx:else>
      <button class='search-btn' bindtap='close_flight_number'>
        <text style="font-size:30rpx;">取消</text>
      </button>
    </block>
  </view>
  <view class='flight_number_list'>
    <view class='flight_number_item' wx:if="{{flight_number_list.length}}" wx:for="{{flight_number_list}}" wx:for-index="index" wx:key="index" bindtap='set_flight_number_text' data-id="{{index}}">
      <view class="flight_number_item-t">{{item.F_FlightNumber}}</view>
      <view class="flight_number_item-b">{{item.AddressBegin}}{{item.F_AirfieldBegin}}{{item.F_AirfieldFloorBegin}} - {{item.AddressEnd}}{{item.F_AirfieldEnd}}{{item.F_AirfieldFloor}}</view>
      <view class='left'>
        <i-icon type="enter" />
      </view>
    </view>
  </view>
</view>