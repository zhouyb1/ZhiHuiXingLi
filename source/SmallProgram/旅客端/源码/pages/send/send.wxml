    <view class="list">
      <view class="list_ls">航班号</view>
      <view class="list_l" style="font-size:26rpx;width:100%" bindtap='tab_flight_number'>
        <text style="font-size:25rpx" wx:if="{{!flight_number.F_FlightNumber}}">请选择航班号</text>
