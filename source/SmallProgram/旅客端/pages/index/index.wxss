/**index.wxss**/

page {
  background: #f5f5f5;
}

.container {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  /* background: #3cb4ff; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.welcomes {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.8;
  z-index: -2;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo button {
  background: #0984ac;
  color: #fff;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.usermotto {
  margin-top: 200px;
}

.index-img {
  width: 100%;
  height: 360rpx;
  background: #0984ac;
  position: relative;
}

.index-img-top {
  width: 100%;
  height: 460rpx;
  position: absolute;
  left: 0;
  top: -190rpx;
}

.index-img-b {
  width: 95%;
  height: 200rpx;
  position: absolute;
  bottom: -100rpx;
  left: 2.5%;
}
.nav{
  width:100%;
  height: 130rpx;
  margin-top:140rpx;
  padding:0 2.5%;
  box-sizing: border-box;
}
.nav-l,.nav-r{
  width:49%;
  height: 100%;
}
.nav-l{
  float: left;
}
.nav-r{
  float: right;
}
.nav-l image,.nav-r image{
  width:100%;
  height: 100%;
}
.hot{
  margin-top:30rpx;
}
.fonts{
  font-size: 20rpx;
}
.hot-goods{
  width:96%;
  height: 500rpx;
  margin: 20rpx auto 0 auto;
}
.hot-l,.hot-r{
  width: 49%;
  height: 100%;
}
.hot-l{
  float: left;
  background: #ccc;
}
.hot-r{
  float: right;
}
.hot-r-item{
  width: 96%;
  height: 48%;
  background: #ccc;
  border-radius: 10rpx;
  margin:0 auto;
}
.hot-r .hot-r-item:last-child{
  margin-top:4%;
}
.btns{
  height: 150rpx;
}