/* pages/user/user.wxss */

page {
  background: #eee;
}

.user {
  width: 100%;
  height: 380rpx;
  background: linear-gradient(#3cb4ff, #eee);
  position: relative;
}

.user-flex {
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-flex-btn {
  color: #fff;
  background-color: #409eff;
  border-color: #409eff;
  font-size: 30rpx;
}

.user_info {
  width: 100%;
  height: 60%;
  /* background: red; */
  display: flex;
}

.image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 20rpx;
}

.image image {
  width: 100%;
  height: 100%;
}

.name {
  width: 60%;
  height: 100%;
  display: flex;
  align-items: center;
  color: #fff;
}

.order {
  position: absolute;
  left: 5%;
  bottom: -70rpx;
  width: 90%;
  height: 200rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.order view {
  width: 18%;
  height: 70%;
  /* background: red; */
  margin-right: 1%;
}

.order view:last-child {
  margin-right: 0;
}

.order view view:first-child {
  width: 100%;
  height: 60%;
  /* background: blue; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.order view view:first-child image {
  width: 60rpx;
  height: 60rpx;
}

.order view view:last-child {
  width: 100%;
  height: 40%;
  /* background: pink; */
  font-size: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list {
  width: 90%;
  /* height: 500rpx; */
  margin: -100rpx auto 100rpx auto;
  border-radius: 10rpx;
  overflow: hidden;
  font-size: 15px;
}

.ver {
  width: 100%;
  height: 130rpx;
  color: #ccc;
  font-size: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
}
