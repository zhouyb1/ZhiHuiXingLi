/* pages/user/user.wxss */

page {
  background: #eee;
}

.user {
  width: 100%;
  height: 380rpx;
  background: #3cb4ff;
  position: relative;
}

.user_info {
  width: 100%;
  height: 60%;
  /* background: red; */
  display: flex;
}

.image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 20rpx;
}

.image image {
  width: 100%;
  height: 100%;
}

.name {
  width: 60%;
  height: 100%;
  display: flex;
  align-items: center;
  color: #fff;
}

.order {
  position: absolute;
  left: 5%;
  bottom: -70rpx;
  width: 90%;
  height: 200rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.order view {
  width: 18%;
  height: 70%;
  /* background: red; */
  margin-right: 1%;
}

.order view:last-child {
  margin-right: 0;
}

.order view view:first-child {
  width: 100%;
  height: 60%;
  /* background: blue; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.order view view:first-child image {
  width: 60rpx;
  height: 60rpx;
}

.order view view:last-child {
  width: 100%;
  height: 40%;
  /* background: pink; */
  font-size: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list {
  width: 90%;
  height: 500rpx;
  background: red;
  margin: 100rpx auto 0 auto;
  border-radius: 10rpx;
  overflow: hidden;
  font-size:15px;
}
