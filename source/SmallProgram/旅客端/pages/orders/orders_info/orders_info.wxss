/* pages/orders/orders_info/orders_info.wxss */

page {
  color: #888;
}

.text {
  width: 100%;
  height: 100rpx;
  background: #eee;
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #ccc;
  padding-left: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
}

.list {
  width: 95%;
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: solid 1px #f2f2f2;
  padding-left: 20rpx;
  position: relative;
  font-size: 30rpx;
  margin: 0 auto;
  box-sizing: border-box;
}

.list-title {
  width: 120rpx;
  height: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.lists {
  width: 100%;
  height: 100rpx;
  border-bottom: solid 1px #ccc;
  font-size: 30rpx;
  padding-left: 20rpx;
  position: relative;
  text-align: right;
  line-height: 100rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}

.lists-right {
  color: #ff8d1a;
  margin-left: 30rpx;
  box-sizing: border-box;
}

.ems {
  width: 100%;
  margin-bottom: 300rpx;
  padding-bottom:200rpx;
}

.ems-top {
  margin-top: 50rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
  background: #fff;
  z-index: 9;
  font-size: 30rpx;
  box-sizing: border-box;
}

.go-pay {
  width: 100%;
  height: 100%;
  background: #3cb4ff;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.order-type, .order-ok {
  width: 100%;
  height: 100%;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.order-type view, .order-ok view {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.order-type view view {
  text-align: right;
}
.express{
  color:#3cb4ff;
  /* font-weight: 300; */
  text-decoration:underline;
}
