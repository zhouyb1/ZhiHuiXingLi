/* pages/send/send.wxss */

page {
  color: #888;
}

.text {
  width: 100%;
  height: 80rpx;
  background: #eee;
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #ccc;
  padding-left: 10rpx;
}

.list {
  width: 100%;
  height: 100rpx;
  display: flex;
  border-bottom: solid 1px #ccc;
}
/* .list input{
    width: 80%;
} */

.list_l {
  width: 20%;
  height: 100%;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  font-size: 14px;
  box-sizing: border-box;
}

.list_r {
  width: 80%;
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.list_ls {
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  font-size: 14px;
  box-sizing: border-box;
}

.list_rs {
  width: 80%;
  display: flex;
  height: 100%;
  align-items: center;
  font-size: 12px;
  position: relative;
}

.list_l_num {
  width: 80%;
  display: flex;
  height: 100%;
  /* justify-content: center; */
  padding-left: 20rpx;
  align-items: center;
  box-sizing: border-box;
  font-size: 12px;
}

.list_r_num {
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding-left: 20rpx;
  font-size: 14px;
}

.e_city {
  width: 47%;
  height: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
}

.s_city {
  width: 47%;
  height: 80%;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  font-size: 12px;
  /* background: red; */
}

.s_city .picke, .e_city .picke {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.lines {
  width: 6%;
  height: 1px;
  background: #ccc;
}

.filght_num {
  width: 100%;
  height: 80%;
  display: flex;
  align-items: center;
  font-size: 12px;
}

.filght_num > picker {
  width: 100%;
  height: 100%;
  line-height: 100rpx;
  margin-top: -20rpx;
}

.phone_btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 80rpx;
  height: 100%;
}

.phone_btn view:last-child {
  width: 100%;
  height: 30%;
  font-size: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color:#3cb4ff;
}

.phone_btn view:first-child {
  width: 100%;
  height: 70%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.images{
  width: 70%;
  height: 90%;
}
.phone_btn image {
  width: 90%;
  height: 90%;
}

.code_box {
  position: absolute;
  top: 0;
  right: 0;
  width: 200rpx;
  height: 100%;
  /* background: red; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.codes {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.codes image {
  width: 50%;
  height: 50%;
}

.save_code {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #3cb4ff;
  color: #fff;
}

.list_r_num view {
  width: 50%;
  height: 60%;
  font-size: 12px;
  background: red;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
}

.footer view {
  width: 50%;
  height: 100%;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer view:first-child {
  background: #3cb4ff;
}

.footer view:last-child {
  background: #ff8d1a;
}
