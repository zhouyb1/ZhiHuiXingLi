/* pages/pays/pays.wxss */

page {
  color: #888;
  font-size: 30rpx;
}

.text {
  width: 100%;
  height: 80rpx;
  background: #eee;
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #ccc;
  padding-left: 10rpx;
  box-sizing: border-box;
}

.list {
  width: 95%;
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: solid 1px #f2f2f2;
  padding-left: 20rpx;
  position: relative;
  font-size: 30rpx;
  margin: 0 auto;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.list-title {
  width: 120rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.lists {
  width: 100%;
  height: 100rpx;
  border-bottom: solid 1px #ccc;
  font-size: 30rpx;
  padding-left: 20rpx;
  position: relative;
  text-align: right;
  line-height: 100rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}

.lists-right {
  color: #ff8d1a;
  margin-left: 30rpx;
  box-sizing: border-box;
}

.timers {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
}

.help {
  width: 300rpx;
  height: 100%;
  display: flex;
  align-items: center;
  /* margin-left: 15rpx; *//* justify-content: center; */
  color: #3cb4ff;
}

.help image {
  width: 50rpx;
  height: 50rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 150rpx;
  display: flex;
  background: #fff;
}

.goods_info {
  width: 60%;
  height: 100%;
}

.goods_info view {
  width: 100%;
  height: 50%;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}

.goods_info view:first-child {
  color: #ff8d1a;
}

.goods_info view:last-child {
  font-size: 10px;
  color: #ccc;
}

.pay {
  width: 40%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #3cb4ff;
  color: #fff;
}

.check {
  display: flex;
  align-items: center;
  font-size: 12px;
}

.go-index {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #3cb4ff;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.go-index-btn {
  width: 300rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ff8d1a;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.list-b {
  margin-bottom: 300rpx;
  min-height: 300rpx;
  padding-bottom: 300rpx;
  padding-top: 30rpx;
  align-items: flex-start;
  border:none;
}

