/* pages/center/my_center/my_center.wxss */

.hd_bg {
  width: 100%;
  height: 330rpx;
  /* background: url("http://39.98.228.251/ImageUrl/1111.jpg") no-repeat; */
  background: #3FA1E0;
  background: linear-gradient( #3FA1E0 ,#A7D8FC);
  /* background-size: 100% 100%; */
}

.hd_bg:after {
  width: 100%;
  height: 330rpx;
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  /* background-color: rgba(0, 0, 0, 0.1); */
  z-index: 1;
}

.portrait {
  position: relative;
  top: 50rpx;
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
  border-radius: 50%;
  display: block;
  overflow: hidden;
}

.wx_name {
  color: #fff;
  text-align: center;
  margin-top: 70rpx;
  font-size: 40rpx;
}

.link_box {
  padding: 20rpx;
}

.link_box .wux-cell__thumb {
  width: 80rpx;
  height: 80rpx;
}

.link_box .wux-cell {
  padding: 20rpx 30rpx 20rpx 10rpx;
}

.page .wux-cell:after, .page .wux-cell-group__bd:after {
  height: 0rpx;
  border-bottom: none;
  border: none;
}

.per {
