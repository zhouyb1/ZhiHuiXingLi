/* pages/flight/flight.wxss */
.weui-search-bar{
  border-bottom:none;
  background: #f5f5f5;
  border-top:none;
  position: fixed;
  width: 100%;
  z-index: 99;

}
.weui-search-bar__label{
  background: #E8E8E9;
  text-align: left;
  padding-left: 20rpx;
}
.weui-search-bar__form{
  background: #E8E8E9;
  border-radius:50rpx;
}
.tips {
  padding:0 30rpx 30rpx 30rpx;
  font-size:28rpx;
}
.flight_box{
  width: 95%;
  background: #fff;
  margin: 0 auto;
  border-radius: 8rpx;
  padding:10rpx 0;
  margin-bottom: 20rpx;
}
.weui-search-bar__cancel-btn{
  color:#3FA1E0;
}
.flight_box .name {
  font-weight: 600;
}
.flight_box .luggage {
  color:#191514;
  font-size: 28rpx;
}
.weui-cell.line {
padding:0 30rpx 10rpx 30rpx;
}
.flight_box .line:after{
  width: 90%;
  margin: 0 auto;
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.1);
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  z-index: 2;
}

.flight_box .begin_end {
  text-align: center;
  padding:20rpx 0;
}

.flight_baaer{
  padding-top: 110rpx;
}

.line_box{
  position: relative;
  height:60rpx;
  text-align: center;
  top:15rpx;
}
.line_box image{
  width: 100%;
  height:100%;
  display: block;
}
.line_box .go{
  position: absolute;
  text-align: center;
  left: 40%;
  top:-20rpx;
}
.bd_font{
  color:#555;
  font-weight: 600;
  /* text-align: left; */
}
.weui-cells:before{
  height:0;
}
.time_info{
  text-align: center;
  padding:5rpx 0;
}
.time_color {
  font-size:40rpx;
  font-weight: 600;
}

.addr {
  font-weight: 600;
  font-size:35rpx;
}

.list_box {
  padding-bottom: 100rpx;
}
.page .weui-search-bar__box  {
  margin:10rpx 20rpx;
  padding-left:15rpx;
}

.page .weui-icon-search_in-box   {
  left:0rpx;
  top:17rpx;
}
.page .weui-search-bar__input{
  padding-left: 20rpx;
}
.page .weui-search-bar__label{
  top:8rpx;
  border-radius: 50rpx;
}
.page .weui-search-bar__cancel-btn{
  line-height: 75rpx;
  /* background: #3FA1E0; */
  background: linear-gradient(to right, #3FA1E0, #A5D3F0);
  border-radius: 50rpx;
  padding:0 30rpx;
  color:#fff;
}
.page .weui-icon-clear  {
  right:10rpx;
}


