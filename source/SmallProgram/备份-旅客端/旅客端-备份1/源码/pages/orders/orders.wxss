/* pages/orders/orders.wxss */

.list_box {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 120rpx;
}

.list {
  width: 100%;
  height: 180rpx;
  position: relative;
  border-bottom: 1px solid #ccc;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.list-title, .list-cont, .list-time {
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.list-title {
  font-size: 15px;
}

.list-cont {
  font-size: 12px;
  color: #666;
}

.list-time {
  font-size: 10px;
  color: #ccc;
}

.list-type {
  width: 80rpx;
  height: 30rpx;
  padding: 10rpx;
  background: red;
  margin-left: 20rpx;
  border-radius: 30rpx;
  font-size: 23rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list-btn {
  position: absolute;
  top: 67rpx;
  right: 1rpx;
  width: 130rpx;
  height: 60rpx;
  /* background: #3cb4ff; */
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ccc;
  border-radius: 30rpx;
}

.list-null {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 15px;
  padding-top: 50rpx;
}
