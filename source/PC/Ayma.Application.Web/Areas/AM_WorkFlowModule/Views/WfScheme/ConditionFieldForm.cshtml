@{
    ViewBag.Title = "条件字段添加";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="am-form-wrap" id="form">
    <div class="col-xs-12 am-form-item am-form-btnitem">
        <div class="am-form-item-title">字段名称<font face="宋体">*</font></div>
        <input id="fieldName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
        <a id="am_fieldSelect" class="btn btn-default am-form-item-btn">字段选择</a>
    </div>
    <div class="col-xs-12 am-form-item">
        <div class="am-form-item-title">字段ID<font face="宋体">*</font></div>
        <input id="fieldId" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 am-form-item">
        <div class="am-form-item-title">比较类型<font face="宋体">*</font></div>
        <div id="compareType" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-12 am-form-item">
        <div class="am-form-item-title">数据值<font face="宋体">*</font></div>
        <input id="value" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
</div>
