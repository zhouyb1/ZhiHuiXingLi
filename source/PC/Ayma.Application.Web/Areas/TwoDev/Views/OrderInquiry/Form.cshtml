@{
    ViewBag.Title = "订单查询";
    Layout = "~/Views/Shared/_GirdForm.cshtml";
}
<style>
    .jfgrid-data-cell {
        border-bottom: 1px solid #ddd;
        border-right: 1px solid #ddd;
    }
    .bj_btn {
        position:absolute;
        right:0;
    }
</style>
<div class="am-form-wrap" id="form">
    <div class="col-xs-4 am-form-item" data-table="T_OrderBody">
        <div class="am-form-item-title">订单号</div>
        <input id="F_OrderNo" type="text" class="form-control" readonly="readonly" />
    </div>
    <div class="col-xs-4 am-form-item" data-table="T_OrderBody">
        <div class="am-form-item-title">机场名称</div>
        <input id="F_AirfieldName" type="text" class="form-control" readonly="readonly" />
    </div>
    <div class="col-xs-4 am-form-item" data-table="T_OrderBody">
        <div class="am-form-item-title">航站楼</div>
        <input id="F_AirfieldFloor" type="text" class="form-control" readonly="readonly" />
    </div>
    <div class="col-xs-4 am-form-item" data-table="T_OrderBody">
        <div class="am-form-item-title">航空公司</div>
        <input id="F_FlightCompany" type="text" class="form-control" readonly="readonly" />
    </div>
    <div class="col-xs-4 am-form-item" data-table="T_OrderBody">
        <div class="am-form-item-title">航班号</div>
        <input id="F_FlightNumber" type="text" class="form-control" readonly="readonly" />
    </div>
    <div class="col-xs-4 am-form-item" data-table="T_OrderBody">
        <div class="am-form-item-title">订单日期</div>
        <input id="F_OrderDate" type="text" class="form-control" readonly="readonly" />
    </div>
    <div class="col-xs-12 am-form-item" data-table="T_OrderBody" style="display:none" id="am_sortingg">
        <div class="am-form-item-title"></div>
        <a id="am_sorting" class="btn btn-success"><i class="fa fa-check"></i>&nbsp;订单分拣</a>
    </div>
    <div class="col-xs-12 am-form-item" data-table="T_OrderBody" style="display: none" id="am_leaveportt">
        <div class="am-form-item-title"></div>
        <a id="am_leaveport" class="btn btn-success"><i class="fa fa-check"></i>&nbsp;订单出港</a>
    </div>
    <div class="col-xs-12 am-form-item" data-table="T_OrderBody" style="display: none" id="am_affirmrefundd">
        <div class="am-form-item-title"></div>
        <a id="am_affirmrefund" class="btn btn-success"><i class="fa fa-check"></i>&nbsp;确认退款</a>
    </div>
    <div class="col-xs-12 am-form-item" data-table="T_OrderBody">

        <div class="am-form-item-title"></div>
        <a id="am_delete" class="btn btn-default" style="float: right"><i class="fa fa-check"></i>&nbsp;删除</a>
        <a id="am_edit" class="btn btn-default" style="float: right"><i class="fa fa-edit"></i>&nbsp;编辑</a>
    </div>
        <!-- 订单详情 -->
        <div class="col-xs-12 am-form-item am-form-item-grid">
            <div id="girdtable"></div>
        </div>
    </div>
@Html.AppendJsFile("/Areas/TwoDev/Views/OrderInquiry/Form.js")
