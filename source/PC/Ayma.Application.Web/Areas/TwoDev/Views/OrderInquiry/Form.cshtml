@{
    ViewBag.Title = "订单查询";
    //Layout = "~/Views/Shared/_Form.cshtml";
    Layout = "~/Views/Shared/_GirdForm.cshtml";
    //var user = Ayma.Util.LoginUserInfo.Get();
}
@*<input type="hidden" id="CurrentCompanyId" value="@user.companyId" />*@
<style>
    .jfgrid-data-cell {
        border-bottom: 1px solid #ddd;
        border-right: 1px solid #ddd;
    }
</style>
<div class="am-form-wrap" id="form">
    <div class="col-xs-4 am-form-item" data-table="T_OrderHead">
        <div class="am-form-item-title">订单号</div>
        <input id="F_OrderNo" type="text" class="form-control" />
    </div>
    <div class="col-xs-4 am-form-item" data-table="T_OrderHead">
        <div class="am-form-item-title">机场名称</div>
        <input id="F_AirfieldName" type="text" class="form-control" />
    </div>
    <div class="col-xs-4 am-form-item" data-table="T_OrderHead">
        <div class="am-form-item-title">航站楼</div>
        <input id="F_AirfieldFloor" type="text" class="form-control" />
    </div>
    <div class="col-xs-4 am-form-item" data-table="T_OrderHead">
        <div class="am-form-item-title">航空公司</div>
        <input id="F_FlightCompany" type="text" class="form-control" />
    </div>
    <div class="col-xs-4 am-form-item" data-table="T_OrderHead">
        <div class="am-form-item-title">航班号</div>
        <input id="F_FlightNumber" type="text" class="form-control" />
    </div>
    <div class="col-xs-4 am-form-item" data-table="T_OrderHead">
        <div class="am-form-item-title">订单日期</div>
        <input id="F_OrderDate" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 am-form-item" data-table="T_OrderHead" style="display:none" id="am_sortingg">
        <div class="am-form-item-title"></div>
        <a id="am_sorting" class="btn btn-success"><i class="fa fa-check"></i>&nbsp;订单分拣</a>
    </div>
    <div class="col-xs-12 am-form-item" data-table="T_OrderHead" style="display: none" id="am_leaveportt">
        <div class="am-form-item-title"></div>
        <a id="am_leaveport" class="btn btn-success"><i class="fa fa-check"></i>&nbsp;订单出港</a>
    </div>

    <!-- 订单详情 -->
    <div class="col-xs-12 am-form-item am-form-item-grid">
        <div id="T_OrderBody"></div>
    </div>
    <!--分tab显示收款与付款-->
    <ul id="pageTab" class="nav nav-tabs">
        <li class="active">
            <a href="#page_formal" data-toggle="tab">收款</a>
        </li>
        <li>
            <a href="#page_temp" data-toggle="tab">付款</a>
        </li>
    </ul>
    <div id="pageTabContent" class="tab-content" style="width: 100%; height: 100%">
        <div class="tab-pane fade in active" id="page_formal" style="width: 100%; height: 100%">
            <div class="am-layout-body" id="girdtable_formal"></div>
        </div>
        <div class="tab-pane fade" id="page_temp" style="width: 100%; height: 100%">
            <div class="am-layout-body" id="girdtable_temp"></div>
        </div>
    </div>

</div>
@Html.AppendJsFile("/Areas/TwoDev/Views/OrderInquiry/Form.js")
