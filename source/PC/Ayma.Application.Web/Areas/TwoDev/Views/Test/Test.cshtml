@{
    ViewBag.Title = "仓库调整";
    Layout = "~/Views/Shared/_GirdForm.cshtml";
    var user = Ayma.Util.LoginUserInfo.Get();
}
<input type="hidden" id="CurrentCompanyId" value="@user.companyId" />
<style>
    .jfgrid-data-cell {
        border-bottom: 1px solid #ddd;
        border-right: 1px solid #ddd;
    }
</style>
<div class="am-form-wrap" id="form">
    <div class="col-xs-4 am-form-item" data-table="T_AdjustmentStock_H">
        <div class="am-form-item-title">单据号码</div>
        <input id="F_Doucno" type="text" class="form-control" placeholder="该单号由系统自动生成" disabled="disabled" />
    </div>
    <div class="col-xs-4 am-form-item" data-table="T_AdjustmentStock_H">
        <div class="am-form-item-title">所属公司<font face="宋体">*</font></div>
        <div id="F_CompanyId" isvalid="yes" checkexpession="NotNull" readonly="readonly"></div>
    </div>
    <div class="col-xs-4 am-form-item" data-table="T_AdjustmentStock_H">
        <div class="am-form-item-title">所属仓库<font face="宋体">*</font></div>
        <div id="F_StoreId" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-4 am-form-item" data-table="T_AdjustmentStock_H">
        <div class="am-form-item-title">单据日期<font face="宋体">*</font></div>
        <input id="F_OrderDate" type="text" class="form-control am-input-wdatepicker" onfocus="WdatePicker({ onpicked: function() { $('#F_OrderDate').trigger('change'); } })" value="@DateTime.Now.ToString("yyyy-MM-dd")" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-8 am-form-item" data-table="T_AdjustmentStock_H">
        <div class="am-form-item-title">备注</div>
        <input id="F_Remark" type="text" class="form-control" />
    </div>

    <div class="col-xs-12 am-form-item" data-table="T_AdjustmentStock_H">
        <div class="am-form-item-title"></div>
        <a id="am_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;添加商品</a>
    </div>
    <div class="col-xs-12 am-form-item am-form-item-grid">
        <div id="T_AdjustmentStock_B"></div>
    </div>
</div>
@Html.AppendJsFile("/Areas/ErpDev/Views/AdjustStock/Form.js")
