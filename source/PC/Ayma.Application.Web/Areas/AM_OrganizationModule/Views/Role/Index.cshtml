@{
    ViewBag.Title = "角色管理";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="am-layout">
    <div class="am-layout-center">
        <div class="am-layout-wrap am-layout-wrap-notitle">
            <div class="am-layout-tool">
                <div class="am-layout-tool-left">
                    <div class="am-layout-tool-item">
                        <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" />
                    </div>
                    <div class="am-layout-tool-item">
                        <a id="btn_Search" class="btn btn-primary btn-sm"><i class="fa fa-search"></i>&nbsp;查询</a>
                    </div>
                </div>
                <div class="am-layout-tool-right">
                    <div class=" btn-group btn-group-sm">
                        <a id="am_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class="btn-group btn-group-sm" ayma-authorize="yes">
                        <a id="am_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;新增</a>
                        <a id="am_edit" class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                        <a id="am_delete" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                        <a id="am_more" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-reorder"></i>&nbsp;更多<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li id="am_memberadd"><a><i></i>&nbsp;添加成员</a></li>
                            <li id="am_memberlook"><a><i></i>&nbsp;查看成员</a></li>
                            <li id="am_authorize"><a><i></i>&nbsp;功能授权</a></li>
                            <li id="am_dataauthorize"><a><i></i>&nbsp;数据授权</a></li>
                        </ul>
                    </div>
                    

                    <div class="btn-group btn-group-sm" ayma-authorize="yes">
                        <a id="am_appfilter" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-filter"></i>&nbsp;访问过滤<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li id="am_ipfilter"><a><i></i>&nbsp;IP过滤</a></li>
                            <li id="am_timefilter"><a><i></i>&nbsp;时段过滤</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="am-layout-body" id="girdtable"></div>
        </div>
    </div>
</div>
@Html.AppendJsFile("/Areas/AM_OrganizationModule/Views/Role/Index.js")
