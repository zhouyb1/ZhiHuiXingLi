@{
    ViewBag.Title = "附件预览";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<style>
    .pictures {
        margin: 0;
        padding: 0;
        list-style: none;
    }

        .pictures > li {
            float: left;
            width: 33.3%;
            height: 33.3%;
            margin: 0 -1px -1px 0;
            border: 1px solid transparent;
            overflow: hidden;
        }

            .pictures > li > img {
                width: 100%;
                height: 100%;
                cursor: -webkit-zoom-in;
                cursor: zoom-in;
            }
</style>
<link href="~/Content/jquery/plugin/viewer/viewer.css" rel="stylesheet" />
<script src="~/Content/jquery/plugin/viewer/viewer.js"></script>
<ul id="viewerList" class="pictures">
</ul>
@Html.AppendJsFile("/Areas/AM_SystemModule/Views/Annexes/PreviewForm.js")