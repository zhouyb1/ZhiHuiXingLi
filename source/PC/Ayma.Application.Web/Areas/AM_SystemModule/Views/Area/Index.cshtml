@{
    ViewBag.Title = "行政区域";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="am-layout am-layout-left-center" id="am_layout">
    <div class="am-layout-left">
        <div class="am-layout-wrap">
            <div class="am-layout-title">目录信息</div>
            <div class="am-layout-body" id="am_left_tree"></div>
        </div>
    </div>
    <div class="am-layout-center">
        <div class="am-layout-wrap">
            <div class="am-layout-title">
                区域信息 - <span id="titleinfo">未选择区域</span>
            </div>

            <div class="am-layout-tool">
                <div class="am-layout-tool-left">
                    <div class="am-layout-tool-item">
                        <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入名称/编号" />
                    </div>
                    <div class="am-layout-tool-item">
                        <a id="btn_Search" class="btn btn-primary btn-sm"><i class="fa fa-search"></i>&nbsp;查询</a>
                    </div>
                </div>

                <div class="am-layout-tool-right">
                    <div class="btn-group btn-group-sm">
                        <a id="am_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class="btn-group btn-group-sm" ayma-authorize="yes">
                        <a id="am_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;新增</a>
                        <a id="am_edit" class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                        <a id="am_delete" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                    </div>
                </div>
            </div>

            <div class="am-layout-body" id="girdtable"></div>
        </div>
    </div>
</div>
@Html.AppendJsFile("/Areas/AM_SystemModule/Views/Area/Index.js")

